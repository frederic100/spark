{
    "name": "logipro/spark",
    "type": "app",
    "description": "start a new PHP project with a simple base structure",
    "keywords": ["php", "DDT"],
    "homepage": "https://github.com/frederic100/spark",
    "license": "Copyrighted",
    "minimum-stability": "stable",
    "authors": [
        {
            "name": "Frédéric Royet",
            "email": "frederic.royet@logipro.com",
            "homepage": "https://www.linkedin.com/in/frederic-royet-42568566/",
            "role": "Project Founder"
        }
    ],
    "require": {
        "php": ">=8.4"
    },
    "require-dev": {
        "infection/extension-installer": "0.1.2",
        "infection/infection": "^0.31.2",
        "phpstan/phpdoc-parser": "2.*",
        "phpstan/phpstan": "2.*",
        "phpunit/phpunit": "^12",
        "squizlabs/php_codesniffer": "3.*",
        "behat/behat": "^3.14"
    },
    "autoload": {
        "psr-4" : {
            "Spark\\" : "src/"
        }
    },
    "autoload-dev": {
        "psr-4" : {
            "Tests\\Unit\\" : "tests/unit",
            "Tests\\Features\\": "tests/features",
            "Tests\\Integration\\": "tests/integration"
        }
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true
        }
    }
}
